  <div class="box-header">
    <h2>Sisteme Giriş</h2>
  </div>
  <div class="box">
   <div class="notification tip"><span class="strong">Bilgi: Deneysan Yönetim Girişi</span>@Html.ValidationSummary(false,"")</div>
    @using (Html.BeginForm("Login","Account"))
    {
        <div class="form col">
            <p>
                @Html.LabelFor(m => m.Email, new { @class="strong"})                
                @Html.TextBoxFor(m => m.Email, new { title = "Kullanıcı adınızı giriniz."})
            </p>
            <p>
                @Html.LabelFor(m => m.Password, new { @class="strong"})
                @Html.PasswordFor(m => m.Password, new { title="Kullanıcı şifresini giriniz."})
            </p>
            <p>
                 <input type="submit" value="Sisteme Giriş" id="btnlogin" class="small fr" />
                <br class="cl" />
            </p>

        </div>
            
    }
      
  
  </div>


