@model web.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/Areas/Admin/Content/scripts/plugins/modernizr-2.5.3.js"></script>
    <script src="~/Areas/Admin/Content/scripts/plugins/jquery-1.7.1.min.js"></script>
    <script src="~/Areas/Admin/Content/scripts/pagescripts/account/login.js"></script>
    <link href="~/Areas/Admin/Content/styles/notification.css" rel="stylesheet" />
    <title>CMS v2.5</title>
    <style type="text/css">
        html, body {height: 100%; }
        div#distance { margin-bottom: -10em; width: 1px;height: 50%; float: left;}
        div#container {	position: relative;   text-align: left; height: 150px;	width: 575px; margin: 0 auto; padding-top: 75px; clear: left;}

        body {background: url(/areas/admin/content/images/bg-login.jpg) repeat-x center; margin: 0; padding: 0;
        font-family: Helvetica, Arial, Tahoma, serif; font-size: 9pt;}
        h1 {font-size:250%;  letter-spacing:-1px; font-weight:bold; width:450px; 
	        margin: 0 0 35px 0; padding: 0;}
        h1 a {color:#fff; text-decoration:none;}
        h1 a:hover {color:#ccc;}

        fieldset, form {margin: 0; padding: 0; border: 0; outline: 0;}
        fieldset legend {display: none;}

        ol {margin: 0; padding: 0; list-style: none;}
        ol li {float: left; margin-right: 15px;}
        label {display: block;}
        label.field-title {width:75px; color:#fff; font-weight: bold; float: left; padding-top: 3px;}
        label.txt-field {width: 186px; height: 21px; background: url(/areas/admin/content/images/bg-loginboxes.gif) no-repeat; float: left; margin-right: 10px}
        label.txt-field input {border: none; outline: none; background: none; padding: 2px 0 0 8px;}
        label.remember {color:#ccc; float:left; width: 200px; margin-top: 20px; margin-left:75px; margin-right: 215px;}
        div.align-right {float: left; width: 56px;  margin-top: 20px;}
    </style>

    <!--[if IE 6]>
    <style type="text/css">
    label.remember {width: 200px; margin-left:40px;}
    label.txt-field {margin-right: 5px}
    </style>
    <![endif]-->
</head>

<body>
<div id="distance"></div>
    
<div id="container">
    <div id="notification_div" class="notification warning" style="display: none; background-color: #686868 !important; color:#efefef; margin-bottom:30px !important; margin-top:-20px !important"> 
        <span class="strong" style="color:#efefef; font-weight:bolder">Uyarı:</span> 
            Lütfen Kullanıcı adınızın ya da parolanızın doğru olduğundan emin olun!
        <span class="close" title="Kapat"></span>
    </div>
	<div id="top"><h1><a href="#">CMS v2.5</a></h1></div>
	<div id="form-container">
        
    @Html.Hidden("ProcessMessage",(object)@ViewBag.ProcessMessage) 
          
        
        @using (Html.BeginForm("Login_v2", "Account"))
        {
            <fieldset>
				        <legend>Login</legend>
				        <ol>
					        <li><label class="field-title">Kullancı Adı:</label><label class="txt-field">
                           
            @Html.TextBoxFor(m => m.Email, new { title = "Kullanıcı adınızı giriniz." })
            </label></li>
					        <li><label class="field-title">Parola:</label><label class="txt-field">

                        @Html.PasswordFor(m => m.Password, new { title = "Kullanıcı şifresini giriniz." })

            </label></li>
					        <li><label class="remember"><input  type="checkbox" name="remember" value="yes"/> Beni Hatırla</label><div class="align-right">
					        <input type="image" name="submit" src="/areas/admin/content/images/bt-login.gif" />
					        </div></li>
				        </ol>
			        </fieldset>
	        <span class="clearFix">&nbsp;</span>
        }
    </div>
</div>
</body>
</html>

