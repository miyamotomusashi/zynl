@model IEnumerable<DAL.Entities.Estate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/adminlayout.cshtml";
}

<link href="~/Areas/Admin/Content/styles/pluginstyles/jquery.msgbox.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/styles/forms.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/styles/table.css" rel="stylesheet" />

@Html.Partial("_leftmenu")

<div id="page-content" class="container_12">
  <div id="page-header">
        <h1>EMLAK İŞLEMLERİ</h1>
   </div>
   <section class="grid_12 form">

      <div class="box-header" ><h1>Emlak Listesi
        &nbsp;&nbsp;|&nbsp;&nbsp;
             @Html.DropDownList("LanguageList")
      
    </h1></div>
    <table id="tblcategory" class="table no-border tablesorter">
        <thead>
            <tr>
                <th class="width20">İlan Adı</th>
                <th class="width15">İl</th>
                <th class="width15">İlçe</th>
                <th class="width15">Semt</th>
                <th class="center width15">Eklenme Tarihi</th>
                <th class="center width10">İşlem</th>
            </tr>
        </thead>
         <tbody id="item-list">
               @foreach (var item in Model)
            {
                <tr id="listItem_@item.Id"  class="handle">
                    <td>
                        <span id="spanitem_@item.Id">@item.Header</span>
                    </td>
                    <td class="">
                        <span id="spanitem_@item.Id">@item.Country.Name</span>
                    </td>
                    <td class="">
                        <span id="spanitem_@item.Id">@item.Town.Name</span>
                    </td>
                     <td class="">
                        <span id="spanitem_@item.Id">@item.District.Name</span>
                    </td>
                    <td class="center">
                        <span id="spanitem_@item.Id">@item.TimeCreated</span>
                    </td>
                    <td class="center">
                       <a href="/yonetim/emlakduzenle/@item.Id">
                        <img id="btn_update_@item.Id"  src="/Areas/Admin/Content/images/icons/16/edit.png"  title="Güncelle" class="cursorpointer" >
                        </a>
                        <img id="DeleteImage_@item.Id"  src="/Areas/Admin/Content/images/icons/16/delete.png" class="cursorpointer"  title="Sil" onclick="DeleteRecord('/Estate/DeleteEstate',@item.Id)">
                    </td>
                </tr>
            }


        </tbody>
    </table>
    </section>
</div>
