                @*<li><a href="/yonetim/dokumanlar">
                    <img width="32" height="32" src="/areas/admin/content/images/ql-paths.gif" alt="" /><br />
                    Dökümanlar</a></li>*@
                <li><a href="/yonetim/iletisim">
                    <img width="32" height="32" src="/areas/admin/content/images/iletisim.png" alt="" /><br />
                    İletişim</a></li>
            </ul>
            <span class="clearFix">&nbsp;</span>
        </div>
    </div>
    <!-- end of div.box -->

    <div class="lbox">
        <h4 class="white">SON HAREKETLER</h4>
        <div class="lbox-container">
            <table id="tblcategory" class="table no-border tablesorter">
                <thead>
                    <tr>
                        <th class="center width5">#</th>
                        <th class="center witdh10">Seviye</th>
                        <th class="center witdh30">Mesaj</th>
                        <th class="center witdh40">Exception</th>
                        <th class="center witdh5">Tarih</th>
                    </tr>
                </thead>
                <tbody id="item-list">
                    @{int i = 0; string line = "odd"; }
                    @foreach (var item in Model)
                    {
                        i++;
                        if (i % 2 == 0) { line = "odd"; } else { line = "even"; }
                        <tr class="handle @line">
                            <td class="center">
                                <span>@i</span>
                            </td>
                            <td class="center">
                                <span>@item.Level</span>
                            </td>
                            <td class="left">
                                <span>@item.Message</span>
                            </td>
                            <td class="center">
                                <span>@item.Exception</span>
                            </td>
                            <td class="center">
                                <span>@item.Date</span>
                            </td>
                        </tr>
             
                    }
                </tbody>
            </table>
        </div>
        <!-- end of div.box-container -->

    </div>
</div>



