@model IEnumerable<DAL.Entities.ProductGroup>
@{
    int topGroupId = Model.FirstOrDefault(x => x.TopProductId == 0).ProductGroupId;    
}

@foreach (var item in Model.Where(d => d.ProductGroupId != topGroupId))
{
    <li class="dd-item dd3-item" data-id="@item.ProductGroupId">
        <div class="dd-handle dd3-handle">Drag</div><div class="dd3-content">@item.GroupName</div> 

        @{Html.RenderPartial("_submenu", @Model);}

}
