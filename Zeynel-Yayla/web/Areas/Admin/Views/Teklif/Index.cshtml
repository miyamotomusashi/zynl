@model IEnumerable<DAL.Entities.Teklif>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/adminlayout.cshtml";
}

<link href="~/Areas/Admin/Content/styles/pluginstyles/jquery.msgbox.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/styles/forms.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/styles/table.css" rel="stylesheet" />

@Html.Partial("home_leftbar")

<div id="page-content" class="container_12">
    <div id="page-header">
       <h2>@ViewBag.Header</h2>
    </div>  
    <section class="grid_12 form">
    <div class="box-header" >
        <h1>Teklif Listesi</h1>
    </div>
    <table id="tblcategory" class="table no-border tablesorter">
        <thead>
            <tr>
                <th class="center width10">Detay</th>
                <th class="center width10">Teklif No</th>
                @if (@ViewBag.Tur == "1")
                {
                    <th class="center witdh10">Durum</th>
                }
                <th class="witdh40">Kurum</th>
                <th class="witdh30">Ünvan</th>
               
                <th class="center witdh10">Geliş Tarihi</th>
                <th class="center witdh10">Tutar</th>
                <th class="center" style="width:40px">İşlem</th>
            </tr>
        </thead>
         <tbody id="item-list">
            @foreach (var item in Model)
            {
                <tr id="listItem_@item.TeklifId"  class="handle">
                    <td class="center">
                        <a href="/yonetim/teklifler/detay/@item.TeklifId">
                            <img src="/Areas/Admin/Content/images/icons/16/edit.png"  title="Detay Gör" class="cursorpointer" />
                        </a>
                    </td>
                
                    <td class="center">
                       @item.TeklifId
                    </td>
                    @if (@ViewBag.Tur == "1")
                    {
                        <td class="center">
                                @if(@item.Durum == 0)
                                {
                                    <span style="color:green;font-weight:bold;">Onaylandı</span>
                                }
                             @if(@item.Durum == 1)
                                {
                                    <span style="color:blue;font-weight:bold;">Onaylanmadı</span>
                                }
                                 @if(@item.Durum == 2)
                                {
                                    <span style="color:red;font-weight:bold;">İptal Edildi</span>
                                }        
                        </td>
                    }
                    <td>
                       @item.Kurum
                    </td>
                     <td>
                       @(item.Unvan + " " + item.Adsoyad)
                    </td>
                    <td class="center">@item.TeklifTarihi</td>
                    <td class="center">@item.FaturaTutar  @item.ParaBirimi</td>
                    <td class="center">
                        <a href="/yonetim/teklifler/sil/@item.TeklifId/@Url.RequestContext.RouteData.Values["type"].ToString()" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                            <img src="~/Areas/Admin/Content/images/icons/16/delete.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
 <br class="cl" />
<div id="info"></div>
</div>




<link href="~/Areas/Admin/Content/styles/pluginstyles/jquery.msgbox.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/scripts/plugins/jquery.msgbox.min.js"></script>
