<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/js/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="~/Content/Scripts/modernizr-2.0.4.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="bg">
        <div class="wrapper2">
            <div class="header2">
                <a href="/" class="logo2">
                    <img src="/img/logo.png" border="0" /></a>
                <div class="search">
                    @{ Html.RenderAction("_search", "FSearch"); }
                </div>
                <ul class="topMenu">
                    <li>@Html.ActionLink("TR", "ChangeCulture", "FHome", new { lang = "tr", returnUrl = this.Request.RawUrl }, null)</li>
                    <li>@Html.ActionLink("EN", "ChangeCulture", "FHome", new { lang = "en", returnUrl = this.Request.RawUrl }, null)</li>
                    <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_contactdetails" class="last">@SharedRess.SharedStrings.contact.ToUpper()</a></li>
                </ul>
                <div class="mainMenuContent">
                    <ul class="firstMenu">
                        @*<li class="m1"><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_aboutus">@SharedRess.SharedStrings.aboutus</a>*@
                        <li class="m1"><a href="#">@SharedRess.SharedStrings.aboutus</a>
                            @{ Html.RenderAction("topaboutus", "FShared"); }                            
                        </li>
                        @*<li class="m2"><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_services">@SharedRess.SharedStrings.services</a>*@
                        <li class="m2"><a href="#">@SharedRess.SharedStrings.services</a>
                            @{ Html.RenderAction("topservices", "FShared"); }
                        </li>
                        @*<li class="m3"><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_sectors">@SharedRess.SharedStrings.sectors</a>*@
                        <li class="m3"><a href="#">@SharedRess.SharedStrings.sectors</a>
                            @{ Html.RenderAction("topsectors", "FShared"); }
                        </li>
                        @*<li class="m4"><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_products">@SharedRess.SharedStrings.products</a>*@
                        <li class="m4"><a href="#">@SharedRess.SharedStrings.products</a>
                            @{ Html.RenderAction("topproducts", "FShared"); }
                        </li>
                        @*<li class="m5"><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_references">@SharedRess.SharedStrings.references</a>*@
                        <li class="m5"><a href="#">@SharedRess.SharedStrings.references</a>
                            @{ Html.RenderAction("topreferences", "FShared"); }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="main2">
                @RenderBody()
            </div>
            
        </div>
		<div class="footerWrapper2">
		<div class="footer2">
                @{ Html.RenderAction("footer", "FShared"); }
            </div>
			</div>
    </div>
</body>
</html>
